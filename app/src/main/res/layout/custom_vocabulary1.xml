<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView7"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:text="わたしたち私たち"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

            <com.example.windowsuser.japanforyou.Font_Thai.Font_Thai
                android:id="@+id/TextThai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="เรา,พวกเรา"
                android:textSize="24sp"
                android:layout_alignBaseline="@+id/TextRomanji"
                android:layout_alignBottom="@+id/TextRomanji"
                android:layout_alignParentEnd="true" />

            <com.example.windowsuser.japanforyou.Font_Thai.Font_Thai
                android:id="@+id/TextRomanji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Watashitachi"
                android:textSize="24sp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/textView12"
                android:layout_marginStart="14dp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
