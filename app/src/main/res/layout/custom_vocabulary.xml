<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView7"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView11"
                android:layout_alignParentStart="true"
                android:layout_marginStart="23dp"
                android:text="わたし" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/TextRomanji"
                android:layout_alignBottom="@+id/TextRomanji"
                android:layout_alignParentStart="true"
                android:layout_marginStart="34dp"
                android:text="私"
                android:textSize="24sp" />

            <com.example.windowsuser.japanforyou.Font_Thai.Font_Thai
                android:id="@+id/TextThai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/TextRomanji"
                android:layout_alignBottom="@+id/TextRomanji"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="27dp"
                android:text="ผม,ดิฉัน "
                android:textSize="24sp" />

            <com.example.windowsuser.japanforyou.Font_Thai.Font_Thai
                android:id="@+id/TextRomanji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Watashi"
                android:textSize="24sp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
