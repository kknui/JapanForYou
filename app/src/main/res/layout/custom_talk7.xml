<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <ImageView
        android:id="@+id/imageViewp6"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/cardView6"
        android:layout_toEndOf="@+id/cardView6"
        app:srcCompat="@drawable/mascot_5" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView6"
        android:layout_width="270dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.example.windowsuser.japanforyou.Font_Thai.Font_Thai
                android:id="@+id/font_Thai20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/font_Thai21"
                android:layout_centerHorizontal="true"
                android:text="คุณแอนนาเคยร้องเพลงญี่ปุ่นไหมครับ"
                android:textSize="20sp" />

            <com.example.windowsuser.japanforyou.Font_Thai.Font_Thai
                android:id="@+id/font_Thai21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/font_Thai22"
                android:layout_centerHorizontal="true"
                android:text="      ANNA-SAN WA NIHON NO \nUTA O UTATTA KOTO GA ARIMASU KA."
                android:textSize="12sp" />

            <com.example.windowsuser.japanforyou.Font_Thai.Font_Thai
                android:id="@+id/font_Thai22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="       アンナさんは日本の\n歌を歌ったことがありますか。"
                android:textSize="14sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <com.example.windowsuser.japanforyou.Font_Thai.Font_Thai
        android:id="@+id/textView6"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageViewp6"
        android:layout_below="@+id/imageViewp6"
        android:layout_marginEnd="7dp"
        android:layout_marginTop="7dp"
        android:text="โรดริโก" />

</RelativeLayout>
