<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="12dp"
        app:srcCompat="@drawable/mascot_1" />

    <com.example.windowsuser.japanforyou.Font_Thai.Font_Thai
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView6"
        android:layout_below="@+id/imageView6"
        android:layout_marginStart="14dp"
        android:text="ANNA "
        android:textSize="18sp" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignTop="@+id/imageView6"
        android:layout_toEndOf="@+id/imageView6"
        app:cardCornerRadius="30dp"
        android:id="@+id/cardView8">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.example.windowsuser.japanforyou.Font_Thai.Font_Thai
                android:id="@+id/font_Thai12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="สวัสดีค่ะดิฉันคือซะกุระค่ะ"
                android:textSize="20sp"
                android:layout_marginStart="9dp"
                android:layout_below="@+id/font_Thai8"
                android:layout_alignStart="@+id/font_Thai8" />

            <com.example.windowsuser.japanforyou.Font_Thai.Font_Thai
                android:id="@+id/font_Thai8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/font_Thai6"
                android:layout_centerHorizontal="true"
                android:text="HAJIMEMASHITE.  WATASHI WA ANNA DESU."
                android:textSize="12sp" />

            <com.example.windowsuser.japanforyou.Font_Thai.Font_Thai
                android:id="@+id/font_Thai6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text=" はじめまして。私はアンナです"
                android:textSize="14sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
