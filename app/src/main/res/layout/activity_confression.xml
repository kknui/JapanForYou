<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.windowsuser.japanforyou.Culture.ConfressionActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tool7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:titleTextColor="@android:color/background_light" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        tools:context="com.example.windowsuser.japanforyou.Culture.ConfressionActivity"
        android:layout_below="@+id/tool7">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context="com.example.windowsuser.japanforyou.Culture.ConfressionActivity">

            <com.example.windowsuser.japanforyou.Font_Thai.Font_Thai
                android:id="@+id/Con1"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/font_Thai16"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp" />

            <ImageView
                android:id="@+id/iCon1"
                android:layout_width="300dp"
                android:layout_height="120dp"
                android:layout_below="@+id/tool3"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:srcCompat="@android:color/background_light"
                android:layout_marginTop="22dp"
                app:layout_constraintTop_toBottomOf="@+id/Con1" />

            <com.example.windowsuser.japanforyou.Font_Thai.Font_Thai
                android:id="@+id/Con2"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/Cu1"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="27dp"
                app:layout_constraintTop_toBottomOf="@+id/iCon1" />

            <ImageView
                android:id="@+id/iCon2"
                android:layout_width="300dp"
                android:layout_height="120dp"
                android:layout_below="@+id/tool3"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:srcCompat="@android:color/background_light"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@+id/Con2" />

            <ImageView
                android:id="@+id/iCon3"
                android:layout_width="300dp"
                android:layout_height="120dp"
                android:layout_below="@+id/tool3"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:srcCompat="@android:color/background_light"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/Con3" />

            <com.example.windowsuser.japanforyou.Font_Thai.Font_Thai
                android:id="@+id/Con3"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/Cu1"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="8dp"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.543"
                android:layout_marginTop="18dp"
                app:layout_constraintTop_toBottomOf="@+id/iCon2" />

            <com.example.windowsuser.japanforyou.Font_Thai.Font_Thai
                android:id="@+id/Con4"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/Cu1"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:textSize="20sp"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@+id/iCon3"
                android:layout_marginLeft="42dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent" />

            <com.example.windowsuser.japanforyou.Font_Thai.Font_Thai
                android:id="@+id/font_Thai"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/Cu1"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:textSize="21sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="14dp"
                app:layout_constraintTop_toBottomOf="@+id/Con4" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</RelativeLayout>

